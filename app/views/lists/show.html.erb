


<div class="container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key %>')">
    <%= @list.name %>
    <div class="card-bookmark-count">
      <%= @bookmarks.count %> movies
    </div>
  </div>

<div class="button-corner">
  <h2>Bookmarks list</h2>
  <div>
    <%= link_to "Add a bookmark",  new_list_bookmark_path(@list), class: "btn btn-gradient"%>
    <%= link_to "Back to list", lists_path, class: "btn btn-gradient" %>
  </div>
</div>

<article>
<ul class="list-group">
  <% @bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.movie.title %>
    <%= link_to "Remove",
                  bookmark_path(bookmark), # this links to the route path where delete is
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
</article>

</div>