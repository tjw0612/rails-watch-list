<h2>New Bookmark</h2>

<%= simple_form_for [ @list, @bookmark ], method: :post, url: list_bookmarks_path(params[:list_id]) do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie, as: :select %>
  <%= f.submit "Submit bookmark", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", list_path(params[:list_id]) %>